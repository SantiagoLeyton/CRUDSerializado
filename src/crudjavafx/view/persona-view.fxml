<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="crudjavafx.controller.PersonaController"
      spacing="10" alignment="CENTER">
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>

    <Label text="CRUD de Personas" style="-fx-font-size: 18px;"/>
    <TableView fx:id="tablaPersonas" prefWidth="400">
        <columns>
            <TableColumn fx:id="colId" text="ID" prefWidth="100"/>
            <TableColumn fx:id="colNombre" text="Nombre" prefWidth="150"/>
            <TableColumn fx:id="colEdad" text="Edad" prefWidth="100"/>
        </columns>
    </TableView>
    <HBox spacing="10">
        <Button text="Agregar" onAction="#agregarPersona"/>
        <Button text="Eliminar" onAction="#eliminarPersona"/>
        <Button text="Actualizar" onAction="#actualizarTabla"/>
    </HBox>
</VBox>
